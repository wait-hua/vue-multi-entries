/* 由`gulp icon-sprite`自动生成，请直接使用，不要手动修改 */

.i-icon {
    display: inline-block;
    background: url({{{spritesheet.escaped_image}}}) no-repeat;
}

{{#if retina_spritesheet}}
@media (-webkit-min-device-pixel-ratio: 2),
       (min-resolution: 192dpi) {
    .i-icon {
        background: url({{{retina_spritesheet.escaped_image}}}) no-repeat;
        background-size: {{spritesheet.px.width}} {{spritesheet.px.height}};
    }
}
{{/if}}

{{#each sprites}}
.i-icon-{{{name}}} {
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/each}}
